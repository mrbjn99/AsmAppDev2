@model IEnumerable<AsmAppDev2.Models.Course>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Request.IsAuthenticated && User.IsInRole("Staff"))
{
    @Html.ActionLink("Create a new Course", "Create")
}

<table class="table table-striped">
    <tr>
        <th>Course Id</th>
        <th>Course Name</th>
        <th>Course Descriptions</th>
        <th>Category Name</th>
        @*@if (Request.IsAuthenticated && User.IsInRole("Staff"))*@

        <th>Edit</th>
        <th>Delete</th>

    </tr>

    @foreach (var course in Model)
    {
        <tr>
            <td>@course.ID</td>
            <td>@course.Name</td>
            <td>@course.Description</td>
            <td>@course.Category.Name</td>
            @if (Request.IsAuthenticated && User.IsInRole("Staff"))
            {
                <td>@Html.ActionLink("Edit this course", "Edit", new { id = course.ID })</td>
                <td>@Html.ActionLink("Delete this course", "Delete", new { id = course.ID })</td>
            }
        </tr>
    }
</table>