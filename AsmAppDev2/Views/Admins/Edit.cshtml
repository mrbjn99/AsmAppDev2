@model AsmAppDev2.ViewModels.ApplicationUserViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Account</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Edit", "ApplicationUser", FormMethod.Post))
{
    @Html.HiddenFor(p => p.User.Id)

    <div class="form-group">
        @Html.LabelFor(p => p.User.Email)
        @Html.EditorFor(p => p.User.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(p => p.User.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.User.PasswordHash)
        @Html.TextBoxFor(p => p.User.PasswordHash, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.User.PasswordHash, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
}
@Html.ActionLink("Back to Index", "Index")